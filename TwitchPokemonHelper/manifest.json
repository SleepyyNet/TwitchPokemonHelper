{
  "name": "Twitch Pokemon Helper",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Helps catch pokemon.",
  "permissions": [
    "*://*.ext-twitch.tv/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ext-twitch.tv/*"
      ],
      "all_frames" : true,
      "js": [
        "src/inject.js"
      ]
    }
  ],
  "background":{
    "scripts":["src/bg.js"],
    "persistent": true
  },
  "browser_action": {
  }
}